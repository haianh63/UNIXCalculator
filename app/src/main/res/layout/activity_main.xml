<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNIX Calculator"
        android:gravity="center" />

    <EditText
        android:id="@+id/block_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Block size (in Bytes):"
        android:layout_marginRight="10dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/pointer_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Pointer size (in Bytes):"
        android:inputType="text"/>

    <EditText
        android:id="@+id/logical_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Logical Address (in Bytes):"
        android:inputType="text" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Result: "
        />
</LinearLayout>